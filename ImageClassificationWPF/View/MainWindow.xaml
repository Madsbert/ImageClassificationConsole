<Window x:Class="ImageClassificationWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        <Image HorizontalAlignment="Left" 
               Height="310" Margin="0,10,0,0" Grid.Row="1" 
               VerticalAlignment="Top" Width="397"
               Source="{Binding CurrentPictureInfo.Path}"/>
        
        <TextBox HorizontalAlignment="Center" 
                 TextWrapping="Wrap" 
                 Text="{Binding CurrentPictureInfo.Path, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center" Width="355" Height="28"/>
        
        <Button Grid.Column="1" Content="Find Picture File" 
                HorizontalAlignment="Center" Margin="0,29,0,0" 
                VerticalAlignment="Top" Command="{Binding FindPictureCmd}"/>


        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Class: "></Label>
                <Label Content="{Binding CurrentPictureInfo.Category }"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Score: "></Label>
                <Label Content="{Binding CurrentPictureInfo.Score }"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Accuracy: "></Label>
                <Label Content="{Binding CurrentAIStatistics.Accuracy }"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Recall: "></Label>
                <Label Content="{Binding CurrentAIStatistics.Recall }"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Precision: "></Label>
                <Label Content="{Binding CurrentAIStatistics.Precision }"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="F1: "></Label>
                <Label Content="{Binding CurrentAIStatistics.F1 }"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Macro-recall: "></Label>
                <Label Content="{Binding CurrentAIStatistics.RecallMacro }"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Macro-precision: "></Label>
                <Label Content="{Binding CurrentAIStatistics.PrecisionMacro }"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Macro-F1: "></Label>
                <Label Content="{Binding CurrentAIStatistics.F1Macro}"></Label>
            </StackPanel>
        </StackPanel>
           


    </Grid>
</Window>
